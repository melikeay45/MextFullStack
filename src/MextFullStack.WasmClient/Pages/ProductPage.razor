@page "/products"
@using MextFullStack.Domain.Dtos
@using MextFullStack.WasmClient.Components
@inject HttpClient HttpClient

@if(Products is null || !Products.Any())
{
    <Loading/>
}

else
{
    <div class="row">
        @foreach (var product in Products)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow" style="border-radius: 15px; border: none; transition: transform 0.3s ease-in-out;">
                    <img src="https://www.apple.com/newsroom/images/product/iphone/standard/Apple_iPhone-13-Pro_Colors_09142021_big.jpg.large.jpg"
                         class="card-img-top"
                         alt="@product.Name"
                         style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            @product.Name
                            <span class="badge rounded-pill bg-warning text-dark ms-2" style="opacity: 0.9;">Phones</span>
                        </h5>
                        <p class="card-text mt-2">$@product.Price</p>
                        <a href="#" class="btn btn-success mt-auto" style="background-color: #28a745; border: none;">Go somewhere</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <style>
        .card:hover {
            transform: scale(1.05);
        }
    </style>

}

@code {
    private List<ProductGetAllDto> Products = null;

    protected override async Task OnInitializedAsync()
    {
        Products = await HttpClient.GetFromJsonAsync<List<ProductGetAllDto>>("Products");
    }
}
